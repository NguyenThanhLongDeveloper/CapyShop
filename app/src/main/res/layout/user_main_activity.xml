<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBackgroud"
    tools:context=".user.main.UserMainActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/dl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Lớp nền trắng sẽ mờ dần (alpha) -->
            <View
                android:id="@+id/v_toolbar_backgroud_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/tb_main"
                android:background="@color/white"
                android:alpha="0"
                android:elevation="4dp"/>

            <!-- 1. Toolbar (Cố định phía trên) -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_main"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:elevation="5dp"
                app:titleTextColor="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_tim_kiem_toolbar_main"
                    android:layout_width="200dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/fl_gio_hang_main"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="12dp"
                        android:text="Tìm kiếm sản phẩm ..."
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:textStyle="italic" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_tim_kiem"
                        />
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:id="@+id/fl_gio_hang_main"
                    android:layout_width="60dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="right|center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center|left"
                        android:src="@drawable/ic_gio_hang" />

                    <com.nex3z.notificationbadge.NotificationBadge
                        android:id="@+id/nb_gio_hang_main"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="top|right"/>
                </FrameLayout>

            </androidx.appcompat.widget.Toolbar>

            <!-- 2. NestedScrollView bọc nội dung có thể cuộn -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsv_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <!-- ViewFlipper -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_vf_main"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ViewFlipper
                            android:id="@+id/vf_main"
                            android:background="@drawable/ic_hinh_anh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </androidx.cardview.widget.CardView>

                    <!-- CardView Tìm kiếm Main -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_tim_kiem_main"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="27dp"
                        app:cardElevation="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/cv_vf_main"
                        app:layout_constraintTop_toBottomOf="@+id/cv_vf_main">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_marginLeft="20dp"
                            android:text="Tìm kiếm sản phẩm ..."
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="italic" />

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/ic_tim_kiem" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_danh_muc_main"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/cv_tim_kiem_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_danh_muc_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                    </androidx.cardview.widget.CardView>

                    <!-- Container Danh sách sản phẩm -->
                    <LinearLayout
                        android:id="@+id/ll_product_list_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/LightBackgroud"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/cv_danh_muc_main">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"
                            android:text="Sản phẩm mới nhất"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- RecyclerView Sản phẩm (ĐỨNG IM, KHÔNG CUỘN RIÊNG) -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/LightBackgroud"
                            android:nestedScrollingEnabled="false"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

    <!-- 3. Bottom Navigation (Cố định phía dưới) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_main"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bn_menu_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    app:labelVisibilityMode="labeled"
                    app:menu="@menu/user_bottom_navigation_menu"
                    app:itemIconTint="@color/bottom_navigation_color"
                    app:itemTextColor="@color/bottom_navigation_color" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>