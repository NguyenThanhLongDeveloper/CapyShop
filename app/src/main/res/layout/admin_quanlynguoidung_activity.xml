<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBackgroud"
    tools:context=".admin.nguoidung.AdminQuanLyNguoiDungActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_admin_quan_ly_nguoi_dung"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_quay_lai"
        app:navigationIconTint="@color/black"
        app:titleTextColor="@android:color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Quản lý Người dùng"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_admin_bo_loc_nguoi_dung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tb_admin_quan_ly_nguoi_dung"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/ButtonOnBackgroud"
        app:tabSelectedTextColor="@color/ButtonOnBackgroud"
        app:tabTextColor="@color/black">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả (0)" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bị khóa (0)" />
    </com.google.android.material.tabs.TabLayout>

    <!-- Divider -->
    <View
        android:id="@+id/v_admin_vach_ngan_nguoi_dung"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1F5F9"
        app:layout_constraintTop_toBottomOf="@id/tl_admin_bo_loc_nguoi_dung" />

    <!-- List -->
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_admin_vach_ngan_nguoi_dung"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_admin_quan_ly_nguoi_dung"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>