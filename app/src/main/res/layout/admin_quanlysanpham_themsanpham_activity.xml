<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBackgroud">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_admin_quan_ly_san_pham_bieu_mau"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_quay_lai"
            app:navigationIconTint="@color/black"
            app:titleTextColor="@android:color/transparent">

            <TextView
                android:id="@+id/tv_admin_quan_ly_san_pham_bieu_mau_tieu_de"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Thêm &amp; Sửa Sản Phẩm"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_admin_quan_ly_san_pham_bieu_mau_luu_thanh_cong_cu"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:src="@drawable/ic_xoa"
                android:visibility="gone" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Section: Images -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hình ảnh sản phẩm"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp">

                            <LinearLayout
                                android:id="@+id/ll_admin_quan_ly_san_pham_bieu_mau_hinh_anh_khung_chua"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <!-- Add Image Button -->
                                <LinearLayout
                                    android:id="@+id/ll_admin_quan_ly_san_pham_bieu_mau_them_anh_nut_bam"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/image_backgroud"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_gravity=""
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@drawable/ic_hinh_anh" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Thêm ảnh"
                                        android:textSize="10sp"
                                        android:textColor="@color/black" />
                                </LinearLayout>

                                <!-- Images will be added here programmatically -->

                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Section: Info -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="12dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thông tin chung"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/black"
                            app:boxCornerRadiusBottomEnd="24dp"
                            app:boxCornerRadiusBottomStart="24dp"
                            app:boxCornerRadiusTopEnd="24dp"
                            app:boxCornerRadiusTopStart="24dp"
                            app:boxStrokeColor="@color/ButtonOnBackgroud"
                            app:hintTextColor="@color/ButtonOnBackgroud"
                            android:layout_marginTop="4dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_admin_quan_ly_san_pham_bieu_mau_ten"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nhập tên sản phẩm"
                                android:inputType="text"
                                android:textColorHint="@color/black"
                                android:textColor="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Danh mục *"
                            android:textSize="12sp"
                            android:textColor="@color/black" />

                        <Spinner
                            android:id="@+id/sp_admin_quan_ly_san_pham_bieu_mau_danh_muc"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/image_backgroud" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Thương hiệu *"
                            android:textSize="12sp"
                            android:textColor="@color/black" />

                        <Spinner
                            android:id="@+id/sp_admin_quan_ly_san_pham_bieu_mau_thuong_hieu"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/image_backgroud" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Section: Attributes -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="12dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Thuộc tính sản phẩm"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_admin_quan_ly_san_pham_bieu_mau_thuoc_tinh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Section: Price & Stock -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="12dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giá &amp; Tồn kho"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/black"
                            app:boxCornerRadiusBottomEnd="24dp"
                            app:boxCornerRadiusBottomStart="24dp"
                            app:boxCornerRadiusTopEnd="24dp"
                            app:boxCornerRadiusTopStart="24dp"
                            app:boxStrokeColor="@color/ButtonOnBackgroud"
                            app:hintTextColor="@color/ButtonOnBackgroud"
                            android:layout_marginTop="4dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_admin_quan_ly_san_pham_bieu_mau_gia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nhập giá bán"
                                android:inputType="number"
                                android:textColorHint="@color/black"
                                android:textColor="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/black"
                            app:boxCornerRadiusBottomEnd="24dp"
                            app:boxCornerRadiusBottomStart="24dp"
                            app:boxCornerRadiusTopEnd="24dp"
                            app:boxCornerRadiusTopStart="24dp"
                            app:boxStrokeColor="@color/ButtonOnBackgroud"
                            app:hintTextColor="@color/ButtonOnBackgroud"
                            android:layout_marginTop="4dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_admin_quan_ly_san_pham_bieu_mau_ton_kho"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nhập tồn kho"
                                android:inputType="number"
                                android:textColorHint="@color/black"
                                android:textColor="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Section: Description -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="80dp"
                    app:cardCornerRadius="12dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mô tả sản phẩm"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/black"
                            app:boxCornerRadiusBottomEnd="24dp"
                            app:boxCornerRadiusBottomStart="24dp"
                            app:boxCornerRadiusTopEnd="24dp"
                            app:boxCornerRadiusTopStart="24dp"
                            app:boxStrokeColor="@color/ButtonOnBackgroud"
                            app:hintTextColor="@color/ButtonOnBackgroud"
                            android:layout_marginTop="4dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_admin_quan_ly_san_pham_bieu_mau_mo_ta"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:lines="1"
                                android:hint="Nhập mô tả sản phẩm"
                                android:inputType="text"
                                android:textColorHint="@color/black"
                                android:textColor="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:padding="16dp"
        android:elevation="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_admin_quan_ly_san_pham_bieu_mau_huy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_off_backgroud"
            android:text="Hủy"
            android:textColor="@color/black"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_admin_quan_ly_san_pham_bieu_mau_luu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/button_on_backgroud"
            android:text="Lưu sản phẩm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>