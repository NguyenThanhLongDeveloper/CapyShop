<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBackgroud"
    android:fillViewport="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_admin_chi_tiet_don_hang">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <!-- Order Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_admin_chi_tiet_ma_don_hang"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="#DH-49282"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_admin_chi_tiet_trang_thai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="CHỜ XÁC NHẬN"
                            android:textColor="@color/red"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_admin_chi_tiet_ngay_dat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="15 tháng 10, 2023 lúc 09:41"
                        android:textColor="@color/Gray"
                        android:textSize="13sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Customer Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="THÔNG TIN KHÁCH HÀNG"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <!-- Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_thong_tin_ca_nhan"
                            android:background="@color/white"
                            android:padding="8dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khách hàng"
                                android:textSize="12sp"
                                android:textColor="@color/black" />
                            <TextView
                                android:id="@+id/tv_admin_chi_tiet_ten_khach_hang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phạm Thị Minh Thư"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_so_dien_thoai"
                            android:background="@color/white"
                            android:padding="8dp" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số điện thoại"
                                android:textSize="12sp"
                                android:textColor="@color/black" />
                            <TextView
                                android:id="@+id/tv_admin_chi_tiet_so_dien_thoai"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0912 345 678"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/bt_admin_chi_tiet_goi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gọi"
                            android:textColor="@color/red"
                            android:textSize="12sp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp" />
                    </LinearLayout>

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_dia_chi"
                            android:background="@color/white"
                            android:padding="8dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Địa chỉ giao hàng"
                                android:textSize="12sp"
                                android:textColor="@color/black" />
                            <TextView
                                android:id="@+id/tv_admin_chi_tiet_dia_chi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="123 Đường Nguyễn Huệ..."
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Product List Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_admin_chi_tiet_so_luong_san_pham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SẢN PHẨM (2)"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_admin_chi_tiet_san_pham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:itemCount="2"
                        tools:listitem="@layout/admin_chitietdonhang_item" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Payment & Shipping Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Payment -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_tien"
                            android:padding="8dp"
                            android:background="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thanh toán"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tv_admin_chi_tiet_thanh_toan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COD - Tiền mặt"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Shipping -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_dang_giao_hang"
                            android:padding="8dp"
                            android:background="@color/white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vận chuyển"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tv_admin_chi_tiet_van_chuyen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giao Hàng Nhanh"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Totals Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Subtotal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_admin_chi_tiet_tong_quan_so_luong"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tạm tính (2 món)"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tv_admin_chi_tiet_tam_tinh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2,750,000 đ"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!-- Shipping Fee -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí vận chuyển"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tv_admin_chi_tiet_phi_van_chuyen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30,000 đ"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="12dp" />

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng cộng"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tv_admin_chi_tiet_tong_cong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2,730,000 đ"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/red" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Header: Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_admin_chi_tiet_don_hang"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:navigationIcon="@drawable/ic_quay_lai"
        app:navigationIconTint="@color/black"
        app:titleTextColor="@android:color/transparent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết đơn hàng"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>