<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="10">

        <!-- Hình ảnh sản phẩm -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_item_hinh_anh_san_pham_dat_hang"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:background="@drawable/image_backgroud"
            android:src="@drawable/ic_hinh_anh" />

        <!-- Nội dung thông tin -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="12dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <!-- Tên sản phẩm: Giới hạn 2 dòng, tránh tràn màn hình -->
            <TextView
                android:id="@+id/tv_item_ten_san_pham_dat_hang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Tên sản phẩm"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_thuoc_tinh_san_pham_dat_hang"
                android:text="Thuộc tính"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Spacer để đẩy phần giá xuống đáy của khung 100dp -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Cụm Số lượng và Giá tiền -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/tv_item_so_luong_san_pham_dat_hang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="x 1"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_item_gia_san_pham_dat_hang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="1.200.000 ₫"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>