<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBackgroud"
    tools:context=".user.thongtincanhan.UserThongTinCaNhanActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_thong_tin_ca_nhan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <LinearLayout
                    android:id="@+id/ll_thong_tin_ca_nhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/LightBackgroud"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="20dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_hinh_anh_thong_tin_ca_nhan"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_hinh_anh" />
                        <ImageView
                            android:id="@+id/iv_thay_doi_anh_thong_tin_ca_nhan"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="bottom|end"
                            android:padding="4dp"
                            android:background="@drawable/icon_background"
                            android:src="@drawable/ic_may_anh"
                            app:tint="@color/black" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_ho_va_ten_thong_tin_ca_nhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Họ và tên"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_so_dien_thoai_thong_tin_ca_nhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0987 654 321"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_thong_tin_ca_nhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mua thì hời, bán vẫn lời ."
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_gravity="start"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đăng nhập trước nhé !"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="start"
                            android:textStyle="italic"
                            android:layout_marginBottom="12dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_dang_nhap_thong_tin_ca_nhan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="@color/ButtonOnBackgroud"
                                android:layout_margin="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="16dp"
                                    android:paddingVertical="8dp"
                                    android:text="Đăng nhập"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_tao_tai_khoan_thong_tin_ca_nhan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="@color/ButtonOffBackgroud"
                                android:layout_margin="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="16dp"
                                    android:paddingVertical="8dp"
                                    android:text="Tạo tài khoản"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đơn hàng"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="#E0E0E0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/fl_cho_xac_nhan_thong_tin_ca_nhan"
                                android:layout_width="70dp"
                                android:layout_height="50dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/ic_cho_xac_nhan" />
                                <com.nex3z.notificationbadge.NotificationBadge
                                    android:id="@+id/nb_cho_xac_nhan_thong_tin_ca_nhan"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="top|right" />
                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chờ xác nhận"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/fl_cho_lay_hang_thong_tin_ca_nhan"
                                android:layout_width="70dp"
                                android:layout_height="50dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/ic_cho_lay_hang" />
                                <com.nex3z.notificationbadge.NotificationBadge
                                    android:id="@+id/nb_cho_lay_hang_thong_tin_ca_nhan"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="top|right" />
                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chờ lấy hàng"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/fl_dang_giao_hang_thong_tin_ca_nhan"
                                android:layout_width="70dp"
                                android:layout_height="50dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/ic_dang_giao_hang" />
                                <com.nex3z.notificationbadge.NotificationBadge
                                    android:id="@+id/nb_dang_giao_hang_thong_tin_ca_nhan"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="top|right" />
                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đang giao"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/fl_da_giao_hang_thong_tin_ca_nhan"
                                android:layout_width="70dp"
                                android:layout_height="50dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/ic_da_giao_hang" />
                                <com.nex3z.notificationbadge.NotificationBadge
                                    android:id="@+id/nb_da_giao_hang_thong_tin_ca_nhan"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="top|right" />
                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đã giao"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="Tiện ích và Cài đặt"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_cai_dat_tai_khoan_thong_tin_ca_nhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="20dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cai_dat" />
                        <TextView
                            android:id="@+id/tv_cai_dat_tai_khoan_thong_tin_ca_nhan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="Cài đặt tài khoản"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="#E0E0E0" />

                    <LinearLayout
                        android:id="@+id/ll_dang_xuat_thong_tin_ca_nhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="20dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_thong_tin_ca_nhan" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="Đăng xuất"
                            android:textColor="#FF0000"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/v_toolbar_backgroud_thong_tin_ca_nhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tb_thong_tin_ca_nhan"
            android:background="@color/white"
            android:alpha="0"
            android:elevation="4dp"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_thong_tin_ca_nhan"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:elevation="5dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_toolbar_hinh_anh_thong_tin_ca_nhan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0"
                android:src="@drawable/ic_hinh_anh" />

            <TextView
                android:id="@+id/tv_toolbar_ho_va_ten_thong_tin_ca_nhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:alpha="0"
                android:layout_gravity="center"/>

            <FrameLayout
                android:id="@+id/fl_gio_hang_thong_tin_ca_nhan"
                android:layout_width="60dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginEnd="15dp"
                android:layout_gravity="right|center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/ic_gio_hang" />

                <com.nex3z.notificationbadge.NotificationBadge
                    android:id="@+id/nb_gio_hang_thong_tin_ca_nhan"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top|right"/>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bn_menu_thong_tin_ca_nhan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/user_bottom_navigation_menu"
            app:itemIconTint="@color/bottom_navigation_color"
            app:itemTextColor="@color/bottom_navigation_color" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>